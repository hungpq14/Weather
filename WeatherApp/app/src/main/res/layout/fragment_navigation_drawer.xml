<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layout_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Version 1.0.0"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/navigation_item_sign_in"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Sign In"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/navigation_item_location"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_marker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Location"
                android:textColor="#444444"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/add_loc"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="14dp"
                android:src="@drawable/plus_black" />

            <ImageView
                android:id="@+id/img_expand"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_arrow_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_position"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Hanoi"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_position" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_position_2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Arab"
                android:textColor="#444444"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_map"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Map"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_setting"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Setting"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_weather_social"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/webhook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Weather Social"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/navigation_item_news"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_news" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Weather News"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_community"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Community"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_share"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Share"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_item_feedback"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawer_selector_item">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Feedback"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.NavigationView>